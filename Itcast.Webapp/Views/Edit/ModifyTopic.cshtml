@using Itcast.Model;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
    <link type="image/x-icon" href="/favicon.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @{
        Topic topic = ViewData["Topic"] as Topic;
    }
    <div class="container">
        <h3 style="margin-left:16%">修改试题</h3>
        <hr />
        <form action="/Edit/ModifyTopicMethod?id=@topic.TopicID" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="TopicId" class="col-md-2 control-label">序号：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TopicId" name="TopicId" placeholder="序号" value="@topic.TopicID" />
                </div>
            </div>
            <div class="form-group">
                <label for="TopicTitle" class="col-md-2 control-label">题目：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TopicTitle" name="TopicTitle" placeholder="题目" value="@topic.Title" />
                </div>
            </div>
            <div class="form-group">
                <label for="AnswerA" class="col-md-2 control-label">选项A：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="AnswerA" name="AnswerA" placeholder="选项A" value="@topic.AnswerA" />
                </div>
            </div>
            <div class="form-group">
                <label for="AnswerB" class="col-md-2 control-label">选项B：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="AnswerB" name="AnswerB" placeholder="选项B" value="@topic.AnswerB" />
                </div>
            </div>
            <div class="form-group">
                <label for="AnswerC" class="col-md-2 control-label">选项C：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="AnswerC" name="AnswerC" placeholder="选项C" value="@topic.AnswerC" />
                </div>
            </div>
            <div class="form-group">
                <label for="AnswerD" class="col-md-2 control-label">选项D：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="AnswerD" name="AnswerD" placeholder="选项D" value="@topic.AnswerD" />
                </div>
            </div>
            <div class="form-group">
                <label for="Answer" class="col-md-2 control-label">答案：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="Answer" name="Answer" placeholder="答案" value="@topic.Answer" />
                </div>
            </div>
            <div class="form-group">
                <label for="CourseID" class="col-md-2 control-label">课程序号：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="CourseID" name="CourseID" placeholder="课程序号" value="@topic.CourseID" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <input type="submit" value="确认修改" class="btn btn-default" />
                    <input type="button" value="返回" class="btn btn-default" onclick="history.go(-1);" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>
