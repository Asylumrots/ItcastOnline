@using Itcast.Model;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
    <link type="image/x-icon" href="/favicon.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @{
        UserInfo User = ViewData["UserInfo"] as UserInfo;
    }
    <div class="container">
        <h3 style="margin-left:16%">修改用户信息</h3>
        <hr />
        <form action="/Edit/ModifyUserMethod?id=@User.Id" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="UserName" class="col-md-2 control-label">名称：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="UserName" name="UserName" placeholder="名称" value="@User.Name" />
                </div>
            </div>
            <div class="form-group">
                <label for="UserSex" class="col-md-2 control-label">性别：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="UserSex" name="UserSex" placeholder="性别" value="@User.Sex" />
                </div>
            </div>
            <div class="form-group">
                <label for="UserAge" class="col-md-2 control-label">年龄：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="UserAge" name="UserAge" placeholder="年龄" value="@User.Age" />
                </div>
            </div>
            <div class="form-group">
                <label for="UserEmail" class="col-md-2 control-label">邮箱：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="UserEmail" name="UserEmail" placeholder="邮箱" value="@User.Email" />
                </div>
            </div>
            <div class="form-group">
                <label for="RegTime" class="col-md-2 control-label">注册时间：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="RegTime" name="RegTime" placeholder="注册时间" value="@User.RegTime" />
                </div>
            </div>
            <div class="form-group">
                <label for="UserGrade" class="col-md-2 control-label">权限等级：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="UserGrade" name="UserGrade" placeholder="权限等级" value="@User.Grade" />
                    <i style="opacity:0.5">0:用户 1:管理员 2:总账户</i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <input type="submit" value="确认修改" class="btn btn-default" />
                    <input type="button" value="返回" class="btn btn-default" onclick="history.go(-1);" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>
