@model Itcast.Model.Test

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditTest</title>
    <link type="image/x-icon" href="/favicon.ico" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    

    <div class="container">
        <h3 style="margin-left:16%">添加统测</h3>
        <hr />
        <form action="/Edit/AddTest" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="TestName" class="col-md-2 control-label">统测名称：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TestName" name="TestName" placeholder="统测名称" />
                </div>
            </div>
            <div class="form-group">
                <label for="TestNum" class="col-md-2 control-label">题目数量：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="TestNum" name="TestNum" placeholder="题目数量" />
                </div>
            </div>
            <div class="form-group">
                <label for="TestEndTime" class="col-md-2 control-label">结束时间：</label>
                <div class="col-md-4">
                    <input type="datetime-local" class="form-control" id="TestEndTime" name="TestEndTime" placeholder="结束时间" />
                    <i style="opacity:0.5">(使用Tab键设置时间)</i>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <input type="submit" value="添加" class="btn btn-default" />
                    <input type="button" value="返回" class="btn btn-default" onclick="location.href='@Url.Action("Test", "Home")'" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>
