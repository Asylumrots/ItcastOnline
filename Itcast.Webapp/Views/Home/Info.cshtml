@using Itcast.Model;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
    <link type="image/x-icon" href="/favicon.ico" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @{
        UserInfo us = Session["Userinfo"] as UserInfo;
    }
    <div class="container">
        <h3 style="margin-left:16%">个人信息</h3>
        <hr />
        <form action="/Edit/ModifyUserInfo" method="post" class="form-horizontal">
            <div class="form-group">
                <label for="TestName" class="col-md-2 control-label">用户名：</label>
                <div class="col-md-4" style="position:relative;top:7px;">
                    <label>@us.Name</label>
                </div>
            </div>
            <div class="form-group">
                <label for="TestNum" class="col-md-2 control-label">用户类型：</label>
                <div class="col-md-4" style="position:relative;top:7px;">
                    <label>
                        @{
                            var G = "";
                            if (us.Grade == 1)
                            {
                                G = "管理员";
                                @G;
                            }
                            else if (us.Grade == 2)
                            {
                                G = "统治者";
                                @G;
                            }
                            else
                            {
                                G = "用户";
                                @G;
                            }
                         }
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label for="sex" class="col-md-2 control-label">性别：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="sex" name="sex" placeholder="性别" value="@us.Sex" />
                </div>
            </div>
            <div class="form-group">
                <label for="age" class="col-md-2 control-label">年龄：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="age" name="age" placeholder="年龄" value="@us.Age" />
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-md-2 control-label">邮箱：</label>
                <div class="col-md-4">
                    <input type="email" class="form-control" id="email" name="email" placeholder="邮箱" value="@us.Email" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <input type="submit" value="确认修改" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>
