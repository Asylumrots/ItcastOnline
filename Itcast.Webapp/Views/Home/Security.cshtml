
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="container">
        <h3 style="margin-left:16%">安全设置</h3>
        <hr />
        <form action="/Edit/ModifyUserPwd" method="post" class="form-horizontal">
            <h4 style="margin-left:16%">修改密码</h4><br />
            <div class="form-group">
                <label for="OldPwd" class="col-md-2 control-label">旧密码：</label>
                <div class="col-md-4">
                    <input type="password" class="form-control" id="OldPwd" name="OldPwd" placeholder="旧密码" value="" />
                </div>
            </div>
            <div class="form-group">
                <label for="NewPwd" class="col-md-2 control-label">新密码：</label>
                <div class="col-md-4">
                    <input type="password" class="form-control" id="NewPwd" name="NewPwd" placeholder="新密码" value="" />
                </div>
            </div>
            <div class="form-group">
                <label for="NewPwd2" class="col-md-2 control-label">确认密码：</label>
                <div class="col-md-4">
                    <input type="password" class="form-control" id="NewPwd2" name="NewPwd2" placeholder="确认密码" value="" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <input type="submit" value="确认修改" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>
